            <Button Foreground="Green" Content="Green"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Lime" Content="Lime"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Yellow" Content="Yellow"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Orange" Content="Orange"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Red" Content="Red"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Maroon" Content="Maroon"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Fuchsia" Content="Fuchsia"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Purple" Content="Purple"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Black" Content="Black"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Silver" Content="Silver"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="Gray" Content="Gray"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Foreground="White" Content="White"  Margin="2,2,2,2" Click="Button_Click"/>
            <Button Content="Reset"  Margin="2,2,2,2" Click="Reset_Click"/>
        </WrapPanel>
    </Grid>
